<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DetailsLayout"
    tools:context="tech.rahulsriram.care.Details">


    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:id="@+id/detailtext1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Items"
        android:id="@+id/detailtext2"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/detailtext1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:id="@+id/detailtext3"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/detailtext2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/detailtext4"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/detailtext1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/detailtext5"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/detailtext2"
        android:layout_below="@id/detailtext4"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/detailtext6"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/detailtext3"
        android:layout_below="@id/detailtext5"
        android:layout_marginTop="20dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map"
        android:id="@+id/mapbutton"
        android:tint="#ffffff"
        app:backgroundTint="#3f51b4"
        app:fabSize="normal"
        app:layout_anchorGravity="end|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Donation"
        android:textSize="20dp"
        android:id="@+id/acceptbutton"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/detailtext6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Verify"
        android:textSize="20dp"
        android:id="@+id/verifybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_below="@+id/detailtext6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Make Call"
        android:textSize="20dp"
        android:id="@+id/callbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_below="@+id/detailtext6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Cancel Donations"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/detailtext6"
        android:id="@+id/cancelbutton"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>